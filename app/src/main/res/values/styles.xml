<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--General-->
    <style name="GeneralRedButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/dark_blue</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AnyScreenBackButton">
        <item name="android:src">@drawable/ic_arrow_back</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <!--Options screen-->
    <style name="OptionsEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/hard_grey</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">4</item>
        <item name="counterTextColor">@color/grey</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@drawable/ic_edit_text_error</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextColor">@color/hard_grey</item>
    </style>


    <!--list screen-->
    <style name="Chips" parent="Widget.Material3.Chip.Filter">
        <item name="android:textSize">16sp</item>
    </style>


    <!--Main screen-->
    <style name="CardButtons" parent="Widget.Material3.CardView.Outlined">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">@dimen/margin_sides</item>
        <item name="android:layout_marginTop">@dimen/margin_sides</item>
        <item name="android:layout_marginEnd">@dimen/half_margin_sides</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="CardTitleText" parent="TextAppearance.MaterialComponents.Headline6" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SettingButton">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:src">@drawable/ic_settings</item>
    </style>

    <!--Settings screen-->
    <style name="SettingsTitle">
        <item name="android:text">@string/settings</item>
        <item name="android:textSize">@dimen/settings_title_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/navigation_buttons_margin</item>
    </style>

    <style name="SettingsTextItems">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/settings_text_items_margin_top</item>
        <item name="android:textSize">@dimen/settings_text_items_size</item>
    </style>

    <style name="SettingsSwitchers">
        <item name="android:layout_marginEnd">@dimen/navigation_buttons_margin</item>
    </style>

    <style name="Material3CustomTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorSecondaryContainer">@color/soft_blue</item>
        <item name="colorSurface">@color/white</item>
        <!--switch thumb and track colors unchecked -->
        <!--<item name="colorOnSurface">@color/soft_blue</item>-->
    </style>

    <style name="LanguageChipGroup">
        <item name="selectionRequired">true</item>
        <item name="singleLine">true</item>
        <item name="singleSelection">true</item>
        <item name="android:layout_marginEnd">@dimen/navigation_buttons_margin</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:theme">@style/Material3CustomTheme</item>
        <item name="checkedChip">@id/chip_english</item>
    </style>

    <style name="LanguageChip" parent="Widget.Material3.Chip.Filter">
        <item name="android:textSize">12sp</item>
        <item name="chipCornerRadius">10dp</item>
    </style>

</resources>