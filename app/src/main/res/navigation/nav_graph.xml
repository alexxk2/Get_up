<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.practice.getup.fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_workoutFragment"
            app:destination="@id/workoutFragment" />
        <action
            android:id="@+id/action_mainFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <action
            android:id="@+id/action_mainFragment_to_optionsFragment"
            app:destination="@id/optionsFragment" />
        <argument
            android:name="options"
            app:argType="com.practice.getup.model.Options" />
    </fragment>
    <fragment
        android:id="@+id/listFragment"
        android:name="com.practice.getup.fragments.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list" />
    <fragment
        android:id="@+id/workoutFragment"
        android:name="com.practice.getup.fragments.WorkoutFragment"
        android:label="fragment_workout"
        tools:layout="@layout/fragment_workout" >
        <argument
            android:name="options"
            app:argType="com.practice.getup.model.Options" />
    </fragment>
    <fragment
        android:id="@+id/optionsFragment"
        android:name="com.practice.getup.fragments.OptionsFragment"
        android:label="fragment_options"
        tools:layout="@layout/fragment_options" >
        <action
            android:id="@+id/action_optionsFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
        <argument
            android:name="options"
            app:argType="com.practice.getup.model.Options" />
    </fragment>
</navigation>