<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.WorkoutActivity">


    <TextView
        android:id="@+id/local_timer_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="@string/default_text"
        android:textAlignment="center"
        android:textSize="70sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/general_timer_view"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="@string/default_text"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/current_stage_view"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/preparation_text_example"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/local_timer_view"
        app:layout_constraintEnd_toEndOf="@+id/local_timer_view"
        app:layout_constraintStart_toStartOf="@+id/local_timer_view" />


    <TextView
        android:id="@+id/upcoming_stage_view"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textAlignment="viewEnd"
        android:text="@string/work_text_example"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/current_stage_view"
        app:layout_constraintEnd_toStartOf="@+id/current_stage_view"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/complited_stage_view"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textAlignment="viewStart"
        android:text="@string/rest_text_example"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/current_stage_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/current_stage_view" />


    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_button"
        app:layout_constraintEnd_toEndOf="@+id/local_timer_view"
        app:layout_constraintStart_toStartOf="@id/local_timer_view"
        app:layout_constraintTop_toBottomOf="@id/local_timer_view" />

    <Button
        android:id="@+id/pause_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pause_button"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/local_timer_view"
        app:layout_constraintStart_toStartOf="@id/local_timer_view"
        app:layout_constraintTop_toBottomOf="@id/local_timer_view" />

    <Button
        android:id="@+id/restart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restart_button"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/local_timer_view"
        app:layout_constraintStart_toStartOf="@id/local_timer_view"
        app:layout_constraintTop_toBottomOf="@id/local_timer_view" />


    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/global_progress_indicator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:contentDescription="@string/progress_indicator"
        app:indicatorColor="@color/main_app_color"
        app:indicatorDirectionLinear="startToEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/general_timer_view"
        app:trackColor="@color/main_app_color_super_soft"
        app:trackCornerRadius="8dp"
        app:trackThickness="10dp" />


</androidx.constraintlayout.widget.ConstraintLayout>